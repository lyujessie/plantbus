<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="437dp"
        android:layout_height="385dp"
        android:layout_marginBottom="550dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_image"
        tools:layout_editor_absoluteX="-13dp" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="371dp"
        android:layout_height="108dp"
        android:layout_marginBottom="530dp"
        android:gravity="center"
        android:text="Plant Bus"
        android:textColor="@android:color/background_light"
        android:textSize="64sp"
        android:typeface="normal"
        app:fontFamily="@font/comfortaa"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_img" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="327dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_signin"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="409dp" />


    <Button
        android:id="@+id/btn_google"
        android:layout_width="327dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_google"
        android:text="SIGN IN WITH GOOGLE"
        android:textColor="#f34a38"
        android:textStyle="bold"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="519dp" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="327dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_fb"
        android:text="SIGN IN WITH FACEBOOK"
        android:textColor="#385c8e"
        android:textStyle="bold"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="578dp" />


    <ImageView
        android:id="@+id/bgd_email"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login_bgd"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="301dp" />

    <ImageView
        android:id="@+id/bgd_password"
        android:layout_width="327dp"
        android:layout_height="42dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/password_bgd" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="100dp" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password? Find Password"
        app:fontFamily="@font/source_sans_pro"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="470dp" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Create one"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="646dp" />

</android.support.constraint.ConstraintLayout>